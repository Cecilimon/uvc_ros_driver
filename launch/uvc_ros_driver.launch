<launch>

  <arg name="hflip" default="false" />     <!-- Horizontal flip -->
  <arg name="serialconfig" default="false" />     <!-- use serial interface to upload config -->

  <!-- camera node -->
  <node pkg="uvc_ros_driver" name="uvc_ros_driver_node" type="uvc_ros_driver_node" output="screen">
    <param name="hflip" type="bool"  value="$(arg hflip)" />
    <param name="serialconfig" type="bool"  value="$(arg serialconfig)" />
  </node>

</launch>
